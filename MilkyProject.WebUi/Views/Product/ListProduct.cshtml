@model List<MilkyProject.WebUi.Dtos.ResultProductDto>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Eski Fiyatı</th>
        <th>Ürün Yeni Fiyatı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncele</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.productId</td>
            <td>@item.productName</td>
            <td>@item.oldPrice</td>
            <td>@item.newPrice</td>
            <td>@item.status</td>
            <td><a href="/Product/DeleteProduct/@item.productId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateCategory/@item.productId" class="btn btn-success">Guncelle</a></td>
        </tr>
    }
</table>

<a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>