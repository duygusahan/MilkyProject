@model List<MilkyProject.WebUi.Dtos.EmployeeDtos.ResultEmployeWithJobDto>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">Ekibimiz</p>
            <h1 class="mb-5">Deneyimli Ekip Üyelerimiz</h1>
        </div>
        <div class="row g-4">

            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item rounded p-4">
                        <img class="img-fluid rounded mb-4" src="@item.ImageUrl" alt="">
                        <h5>@item.EmployeName</h5>
                        <p class="text-primary">@item.job.JobName</p>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href=""><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            }
            
            
        </div>
    </div>
</div>