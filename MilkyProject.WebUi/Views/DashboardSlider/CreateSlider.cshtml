@model MilkyProject.WebUi.Dtos.SliderDtos.CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div id="content">
    <!-- topbar -->
    <div class="topbar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="full">
                <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                <div class="logo_section">
                    <a href="index.html"><img class="img-responsive" src="/pluto-1.0.0/images/logo/logo.png" alt="#" /></a>
                </div>
            </div>
        </nav>
    </div>
    <!-- end topbar -->
    <!-- dashboard inner -->
    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h2>Milky Slider Ekleme</h2>
                    </div>
                </div>
            </div>

            <!-- Image Upload Form -->
            <div class="row">
                <div class="col-md-12">
                    <form method="post">

                        <div class="form-group">
                            <label>Slider Görsel Yolu:</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" required>
                        </div>

                        <div class="form-group">
                            <label>Slider Açıklama 1 :</label>
                            <input type="text" class="form-control" asp-for="Description1" required>
                        </div>

                        <div class="form-group">
                            <label>Slider Açıklama 2:</label>
                            <input type="text" class="form-control" asp-for="Description2" required>
                        </div>

                        <button type="submit" class="btn btn-success">Slider Ekle</button>
                    </form>
                </div>
            </div>
            <!-- End Image Upload Form -->

        </div>
    </div>
    <!-- end dashboard inner -->
</div>

