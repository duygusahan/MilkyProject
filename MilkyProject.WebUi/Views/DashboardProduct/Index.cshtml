@model List<MilkyProject.WebUi.Dtos.ProductDtos.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div id="content">
    <!-- topbar -->
    <div class="topbar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="full">
                <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                <div class="logo_section">
                    <a href="index.html"><img class="img-responsive" src="/pluto-1.0.0/images/logo/logo.png" alt="#" /></a>
                </div>

            </div>
        </nav>
    </div>
    <!-- end topbar -->
    <!-- dashboard inner -->
    <div class="midde_cont">
        <div class="container-fluid">

            <!-- row -->
            <div class="row column4 graph">
                <!-- Gallery section -->
                <div class="col-md-12">
                    <div class="white_shd full margin_bottom_30">
                        <div class="full graph_head">
                            <div class="heading1 margin_0">
                                <h2>Milky Ürünler</h2>
                            </div>
                        </div>
                        <div class="full gallery_section_inner padding_infor_info">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-4 col-md-3 margin_bottom_30">
                                        <div class="column">
                                            <a data-fancybox="gallery" href="@item.ImageUrl"><img class="img-responsive" src="@item.ImageUrl" alt="#" style="width: 400px; height: 250px; " /></a>
                                            
                                        </div>
                                        <div class="text-center p-4">
                                            <a class="d-block h5" href="">@item.ProductName</a>
                                            <a class="d-block h7" href="">@item.category.CategoryName</a>

                                            <span class="text-primary me-1">@item.NewPrice</span>
                                            <span class="text-decoration-line-through">@item.OldPrice</span>
                                            <h4>

                                                <a href="#" class="btn btn-danger">Sil</a>
                                                <a href="#" class="btn btn-success">Güncelle</a>

                                            </h4>
                                        </div>
                                      
                                    </div>
                                }

                                <a href="/DashboardGallery/CreateGallery" class="btn btn-primary">Resim Yükle</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- footer -->

        </div>
        <!-- end dashboard inner -->
    </div>
</div>
<!-- model popup -->
<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


