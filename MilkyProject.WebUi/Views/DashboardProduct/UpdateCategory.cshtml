@model MilkyProject.WebUi.Dtos.ProductDtos.UpdateProductDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div id="content">
    <!-- topbar -->
    <div class="topbar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="full">
                <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                <div class="logo_section">
                    <a href="index.html"><img class="img-responsive" src="/pluto-1.0.0/images/logo/logo.png" alt="#" /></a>
                </div>
            </div>
        </nav>
    </div>
    <!-- end topbar -->
    <!-- dashboard inner -->
    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h2>Kategori Güncelleme</h2>
                    </div>
                </div>
            </div>

            <!-- Image Update Form -->
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="form-group">
                            <label for="GalleryId">Ürün ID:</label>
                            <input type="text" class="form-control" asp-for="productId" readonly />
                        </div>

                        <div class="form-group">
                            <label for="ImageTitle">Ürün Adı</label>
                            <input type="text" class="form-control" asp-for="productName"
                                   value="@Model.productName" required>
                        </div>

                        <div class="form-group">
                            <label for="ImageTitle">Ürün Görsel Yolu</label>
                            <input type="text" class="form-control" asp-for="imageUrl"
                                   value="@Model.imageUrl" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="ImageTitle">Ürünün Eski Fiyatı</label>
                            <input type="text" class="form-control" asp-for="oldPrice"
                                   value="@Model.oldPrice" required>
                        </div>

                        <div class="form-group">
                            <label for="ImageTitle">Ürün Yeni Fiyatı</label>
                            <input type="text" class="form-control" asp-for="newPrice"
                                   value="@Model.newPrice" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
            <!-- End Image Update Form -->

        </div>
    </div>
    <!-- end dashboard inner -->
</div>

